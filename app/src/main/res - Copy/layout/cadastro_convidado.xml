<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bakcgroundMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@color/bakcgroundMenu"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="100px"
            android:layout_marginBottom="50px"
            app:srcCompat="@drawable/enjoylogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="20px"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="Cadastro do Convidado"
            android:textColor="@color/colorPrimary"
            android:textSize="70px" />

        <EditText
            android:id="@+id/nomeConv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            android:textColorHint="@color/cinza"
            android:layout_marginTop="45px"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"/>

        <EditText
            android:id="@+id/dtConv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="Data De Nascimento"
            android:inputType="date"
            android:textColorHint="@color/cinza"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"/>

        <Spinner
            android:id="@+id/genConv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:backgroundTint="@color/colorPrimary"
            android:textColorHint="@color/cinza"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"/>

        <EditText
            android:id="@+id/mailConv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/cinza"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"/>

        <EditText
            android:id="@+id/senConv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColorHint="@color/cinza"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/bakcgroundMenu"
            android:fontFamily="@font/quicksand_bold"
            android:text="Inscreva-se" />

    </LinearLayout>

</LinearLayout>