<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bakcgroundMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bakcgroundMenu"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="230px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"
            app:srcCompat="@drawable/enjoylogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginBottom="10px"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="Login do Convidado"
            android:textColor="@color/colorPrimary"
            android:textSize="62px" />

        <EditText
            android:id="@+id/mailConv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:layout_marginTop="15px"
            android:layout_marginRight="35px"
            android:textColor="#ddd"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/cinza" />

        <EditText
            android:id="@+id/senConv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:layout_marginTop="5px"
            android:layout_marginRight="35px"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="#ddd"
            android:textColorHint="@color/cinza" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Entrar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:fontFamily="@font/quicksand_bold"
                android:onClick="Entrar"
                android:text="Entrar"
                android:textColor="@color/bakcgroundMenu" />

            <Button
                android:id="@+id/cadastrar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:fontFamily="@font/quicksand_bold"
                android:onClick="Cadastro"
                android:text="Cadastrar"
                android:textColor="@color/bakcgroundMenu" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>