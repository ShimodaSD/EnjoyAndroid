<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bakcgroundMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InitialActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230px"
        app:srcCompat="@drawable/enjoylogo"
        android:id="@+id/imageView3"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:layout_weight="0"
        android:layout_gravity="center"
        />

    <TextView
        android:text="Entrar como:" android:fontFamily="@font/quicksand_bold"
        android:textSize="30dp"
        android:textColor="@color/textoMenu"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <RadioButton android:id="@+id/radio_conv"
            android:textSize="25dp"
            android:buttonTint="@color/textoMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cinza"
            android:text="Convidado"
            android:layout_marginRight="20dp"
            android:visibility="visible"/>
        <RadioButton android:id="@+id/radio_anf"
            android:textSize="25dp"
            android:buttonTint="@color/textoMenu"
            android:textColor="@color/cinza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnfitriÃ£o"
            android:visibility="visible"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <Button
        android:id="@+id/Entrar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:fontFamily="@font/quicksand_bold"
        android:onClick="EntrarGeral"
        android:text="Entrar"
        android:textColor="@color/bakcgroundMenu" />

    </LinearLayout>

</LinearLayout>